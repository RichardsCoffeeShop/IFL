{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "jsx": "react",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "dist",
    "rootDir": "src",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src"]
}
